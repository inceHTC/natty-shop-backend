generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  phone     String?
  role      String   @default("user")
  createdAt DateTime @default(now())

  addresses Address[]
  orders    Order[]
  favorites Favorite[]
}

model Address {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  fullName  String
  phone     String
  city      String
  district  String
  address   String
  createdAt DateTime @default(now())
   isDefault Boolean @default(false)
  user User @relation(fields: [userId], references: [id])
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  oldPrice    Float?
  isDiscount  Boolean  @default(false)
  isFeatured  Boolean  @default(false)
  gender      String
  type        String
  image       String // ⭐ ana görsel (şimdilik)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  images      ProductImage[] // ⭐ ÇOKLU GÖRSEL
  favoritedBy Favorite[]
  sizes       ProductSize[]
}

model ProductImage {
  id        Int      @id @default(autoincrement())
  productId Int
  url       String
  isMain    Boolean  @default(false)
  order     Int      @default(0)
  createdAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Order {
  id          Int       @id @default(autoincrement())
  userId      Int
  total       Float
  status      String    @default("Hazırlanıyor") // Hazırlanıyor, Kargoya Verildi, Teslim Edildi, İptal Edildi
  createdAt   DateTime  @default(now())
  cancelledAt DateTime?

  addressTitle String?
  addressText  String?
  phone        String?

  user   User         @relation(fields: [userId], references: [id])
  items  OrderItem[]
  return OrderReturn?
}

model OrderReturn {
  id         Int      @id @default(autoincrement())
  orderId    Int      @unique
  returnCode String   @unique
  status     String   @default("TalepEdildi") // TalepEdildi, IadeKoduVerildi, Kargoda, Tamamlandı
  reason     String?  @db.Text
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model OrderItem {
  id       Int     @id @default(autoincrement())
  orderId  Int
  product  String
  price    Float
  quantity Int
  size     String? // Ayakkabı numarası (seçilmişse)

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model Favorite {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String
  message   String   @db.Text
  createdAt DateTime @default(now())
}

model ProductSize {
  id        Int    @id @default(autoincrement())
  size      String
  stock     Int
  productId Int

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}
